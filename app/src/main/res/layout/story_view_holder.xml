<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical"
    android:layout_marginEnd="@dimen/card_margin_horizontal"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    android:layout_marginStart="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:contentPaddingBottom="@dimen/card_content_padding_vertical"
    app:contentPaddingLeft="@dimen/card_content_padding_horizontal"
    app:contentPaddingRight="@dimen/card_content_padding_horizontal"
    app:contentPaddingTop="@dimen/card_content_padding_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/story_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/card_text_margin_image"
            android:layout_marginRight="@dimen/card_text_margin_image"
            android:layout_toLeftOf="@+id/story_image"
            android:layout_toStartOf="@+id/story_image"
            android:textSize="@dimen/story_text_size" />

        <ImageView
            android:id="@+id/story_image"
            android:layout_width="@dimen/story_image_width"
            android:layout_height="@dimen/story_image_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />
    </RelativeLayout>
</android.support.v7.widget.CardView>